{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "preserveConstEnums": false,
    "outDir": "dist",
    "noImplicitUseStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "typings/PlayFab/**/*",
    "typings/**/*"
  ]
}